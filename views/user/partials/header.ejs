<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>
        <%=title%> -
            <%=websiteDetails.website_tagline%>
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="<%=websiteDetails.website_favicon%>" />

    <%-websiteDetails.website_header_code%>

        <!-- Bootstrap Css -->
        <link href="/user/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css">
        <!-- Icons Css -->
        <link href="/user/css/icons.min.css" rel="stylesheet" type="text/css" />
        <link href="/user/css/custom.css" rel="stylesheet" type="text/css" />
        <!-- App Css-->
        <link rel="stylesheet" href="/user/js/lib/style.css">
        <link href="/user/css/app.min.css" id="app-style" rel="stylesheet" type="text/css">

</head>

<body>
    <div id="preloader" style="z-index: 999999999;">
        <div id="status">
            <div class="spinner-chase">
                <div class="chase-dot"></div>
                <div class="chase-dot"></div>
                <div class="chase-dot"></div>
                <div class="chase-dot"></div>
                <div class="chase-dot"></div>
                <div class="chase-dot"></div>
            </div>
        </div>
    </div>

    <!-- Begin page -->
    <div id="layout-wrapper">
        <header id="page-topbar">
            <div class="navbar-header">
                <div class="d-flex">
                    <!-- LOGO -->
                    <div class="navbar-brand-box">
                        <a href="/" class="logo">
                            <span class="logo-sm">
                                <img src="<%=websiteDetails.website_logo%>" alt="" height="22" />
                            </span>
                            <span class="logo-lg">
                                <img src="<%=websiteDetails.website_logo%>" alt="" height="19" />
                            </span>
                        </a>
                    </div>

                    <button type="button" class="btn btn-sm px-3 font-size-16 header-item waves-effect" id="vertical-menu-btn">
                        <i class="fa fa-fw fa-bars"></i>
                    </button>
                </div>

                <div class="d-flex">

                    <div class="dropdown d-inline-block">
                        <button type="button" class="btn header-item waves-effect" id="page-header-user-dropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img class="rounded-circle header-profile-user" src="<%=user.avatar ? user.avatar:'/img/avatar/avatar.jpg' %>" alt="<%=user.username%>" />
                            <span class="d-none d-xl-inline-block ms-1 text-capitalize" key="t-<%=user.username %>"><%=user.username %></span>
                            <i class="mdi mdi-chevron-down d-none d-xl-inline-block"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-end">
                            <!-- item-->
                            <a class="dropdown-item" href="/user/wallet"><i class="bx bx-wallet font-size-16 align-middle me-1"></i> <span key="t-my-wallet">My Wallet</span></a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-danger" href="/logout"><i class="bx bx-power-off font-size-16 align-middle me-1 text-danger"></i> <span key="t-logout">Logout</span></a>
                        </div>
                    </div>


                </div>
            </div>
        </header>

        <%-include("./sidebar")%>

            <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->
            <div class="main-content">
                <div class="page-content">
                    <div class="container-fluid">
                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                    <h4 class="mb-sm-0 font-size-18">
                                        <%=title%>
                                    </h4>
                                </div>
                            </div>
                        </div>
                        <!-- end page title -->