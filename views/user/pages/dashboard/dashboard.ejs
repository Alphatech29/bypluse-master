<%-include("../../partials/header")%>

<div class="row">
    <div class="col-xl-4">
        <div class="card overflow-hidden">
            <div class="bg-primary bg-soft">
                <div class="row">
                    <div class="col-7">
                        <div class="text-primary p-3">
                            <h5 class="text-primary">Welcome Back !</h5>
                            <p><%=websiteDetails.website_title%> Dashboard</p>
                        </div>
                    </div>
                    <div class="col-5 align-self-end">
                        <img src="/user/images/profile-img.png" alt="" class="img-fluid">
                    </div>
                </div>
            </div>
            <div class="card-body pt-0">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="avatar-md profile-user-wid mb-4">
                            <img src="<%=user.avatar ? user.avatar:'/img/avatar/avatar.jpg' %>" alt="" class="img-thumbnail rounded-circle miner-img">
                        </div>
                        <h5 class="font-size-15 text-truncate text-capitalize"><%=user.username%></h5>
                        <p class="text-muted mb-0 text-truncate">Miner</p>
                    </div>

                    <div class="col-sm-8">
                        <div class="pt-4">

                            <div class="row">
                                <div class="col-6">
                                    <h5 class="font-size-15"><%=websiteDetails.website_currency%><%=((user.activities_balance + user.mining_balance) * websiteDetails.website_per_coin + user.referral_balance).toLocaleString()%></h5>
                                    <p class="text-muted mb-0">Overall Balance</p>
                                </div>
                                <div class="col-6">
                                    <h5 class="font-size-15"><%=mineCount%></h5>
                                    <p class="text-muted mb-0">Total Mine</p>
                                </div>
                                <div class="col-12 mt-3">
                                    <h5 class="font-size-15"><%=user.plan_name%></h5>
                                    <p class="text-muted mb-0">Current Subscription</p>
                                </div>
                            </div>
                            <div class="mt-4">
                                <a href="/user/packages"
                                    class="btn btn-primary waves-effect waves-light btn-sm">Upgrade Account <i
                                        class="mdi mdi-arrow-right ms-1"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="mine" class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Mine Engine</h4>
                <div class="row">
                    <div class="mine-balance d-flex justify-content-center mb-5">
                        <button type="button" class="btn btn-dark waves-effect waves-light">
                            <span class="points">0.00000000</span>
                            <span class="rewardn"><%=websiteDetails.website_reward_name%></span>
                        </button>
                    </div>

                    <div class="mine-wrapper d-flex justify-content-center">
                        <button class="mine-engine">
                            <i class="bx bx-power-off"></i>
                        </button>
                    </div>
                        
                    <p id="intro" class="text-muted mb-3 text-center">Click To Start Mining.</p>

                    <div class="timer d-flex justify-content-center mt-2">
                        <button type="button" class="btn btn-dark waves-effect waves-light">
                            <span class="hour">00</span>:
                            <span class="minute">00</span>:
                            <span class="seconds">00</span>
                        </button>
                    </div>
                    
                    
                </div>
                
            </div>
        </div>
    </div>
    <div class="col-xl-8">
        <div class="row">
            <div class="col-md-4">
                <div class="card mini-stats-wid">
                    <div class="card-body">
                        <div class="d-flex">
                            <div class="flex-grow-1">
                                <p class="text-muted fw-medium">Mine Balance</p>
                                <h4 class="mb-0"><%=user.mining_balance.toLocaleString()%> <span class="rewardnn"><%=websiteDetails.website_reward_name%></span> </h4>
                            </div>

                            <div class="flex-shrink-0 align-self-center">
                                <div class="mini-stat-icon avatar-sm rounded-circle bg-primary">
                                    <span class="avatar-title">
                                        <i class="bx bx-archive-in font-size-24"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mini-stats-wid">
                    <div class="card-body">
                        <div class="d-flex">
                            <div class="flex-grow-1">
                                <p class="text-muted fw-medium">Activities Balance</p>
                                <h4 class="mb-0"><%=user.activities_balance.toLocaleString()%> <span class="rewardnn"><%=websiteDetails.website_reward_name%></span> </h4>
                            </div>

                            <div class="flex-shrink-0 align-self-center ">
                                <div class="avatar-sm rounded-circle bg-primary mini-stat-icon">
                                    <span class="avatar-title rounded-circle bg-primary">
                                        <i class="bx bx-money  font-size-24"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mini-stats-wid">
                    <div class="card-body">
                        <div class="d-flex">
                            <div class="flex-grow-1">
                                <p class="text-muted fw-medium">Referral Balance</p>
                                <h4 class="mb-0"><%=websiteDetails.website_currency%><%=user.referral_balance.toLocaleString()%></h4>
                            </div>

                            <div class="flex-shrink-0 align-self-center">
                                <div class="avatar-sm rounded-circle bg-primary mini-stat-icon">
                                    <span class="avatar-title rounded-circle bg-primary">
                                        <i class="bx bx-link  font-size-24"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mini-stats-wid">
                    <div class="card-body">
                        <div class="d-flex">
                            <div class="flex-grow-1">
                                <p class="text-muted fw-medium">Total Shares</p>
                                <h4 class="mb-0"><%=sharePost%></h4>
                            </div>

                            <div class="flex-shrink-0 align-self-center">
                                <div class="avatar-sm rounded-circle bg-primary mini-stat-icon">
                                    <span class="avatar-title rounded-circle bg-primary">
                                        <i class="bx bx-share-alt font-size-24"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mini-stats-wid">
                    <div class="card-body">
                        <div class="d-flex">
                            <div class="flex-grow-1">
                                <p class="text-muted fw-medium">Total Referral</p>
                                <h4 class="mb-0"><%=referralCount%></h4>
                            </div>

                            <div class="flex-shrink-0 align-self-center">
                                <div class="avatar-sm rounded-circle bg-primary mini-stat-icon">
                                    <span class="avatar-title rounded-circle bg-primary">
                                        <i class="bx bx-link font-size-24"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mini-stats-wid">
                    <div class="card-body">
                        <div class="d-flex">
                            <div class="flex-grow-1">
                                <p class="text-muted fw-medium">Total Withdrawal</p>
                                <h4 class="mb-0"><%=websiteDetails.website_currency + (withdrawalAmount.toLocaleString())%></h4>
                            </div>

                            <div class="flex-shrink-0 align-self-center">
                                <div class="avatar-sm rounded-circle bg-primary mini-stat-icon">
                                    <span class="avatar-title rounded-circle bg-primary">
                                        <i class="bx bxs-wallet font-size-24"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end row -->

        <div class="card">
            <div class="card-body" style="position: relative;">
                <div class="d-sm-flex flex-wrap">
                    <h4 class="card-title mb-4">Last 10 Mining History</h4>
                    <%if(miningHistory.length){%>
                    <div class="ms-auto">
                        <ul class="nav nav-pills">
                            <li class="nav-item">
                                <a class="nav-link active" href="/user/history/mining">View More</a>
                            </li>
                        </ul>
                    </div><%}%>
                    

                    
                    <div class="table-responsive">
                        <%if(!miningHistory.length){%>
                            <h6 class="text-center pt-3">No Mining Stats At The Moment</h6>
                            <%}%>

                        <%if(miningHistory.length){%>
                        <table id="mytable" class="table align-middle table-nowrap mb-0">
                            <thead class="table-light">
                                    <th class="align-middle">#</th>
                                    <th class="align-middle">Start</th>
                                    <th class="align-middle">End</th>
                                    <th class="align-middle">Amount</th>
                                    <th class="align-middle">Balance</th>
                                    <th class="align-middle">Description</th>
                                    <th class="align-middle">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                

                                <%miningHistory.map((eh,index)=>{%>
                    
                                    <tr>
                                        <td>
                                            <%=index + 1%>
                                        </td>
                    
                                        <td>
                                            <%=eh.m_start_time%>
                                        </td>
                                        
                                        <td>
                                            <%=eh.m_end_time%>
                                        </td>
                    
                                        <td> <span class="text-xs font-weight-bold">
                                                <%=websiteDetails.website_currency%><%=(eh.m_amount * websiteDetails.website_per_coin).toLocaleString()%> </span>
                                                </td>
                                        <td> <span class="text-xs font-weight-bold">
                                                <%=websiteDetails.website_currency%><%=(eh.m_balance * websiteDetails.website_per_coin).toLocaleString()%> </span>
                                                </td>
                    
                                        <td>
                                            <%=eh.m_text%>
                                        </td>

                                        <td>
                                            <%if(eh.m_status){%>
                                            <button type="button" class="btn btn-success waves-effect waves-light nothingbtn">
                                                <i class="bx bx-check-double font-size-16 align-middle me-2"></i> Completed
                                            </button>
                                            <%}else{%>
                                            <button type="button" class="btn btn-dark waves-effect waves-light nothingbtn">
                                                <i class="bx bx-loader bx-spin font-size-16 align-middle me-2"></i> In Progress
                                            </button>
                                            <%}%>
                                        </td>
                    
                                    </tr>
                    
                                    <%})%>
                            </tbody>
                            
                        </table><%}%>
                        
                    </div>
                    
                    

                </div>

                
               
            </div>
        </div>
    </div>
</div>
 

<div class="row">
    <div class="col-lg-4 col-md-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Referral Link</h4>
                <form id="referrallink">
                    <div class="col-lg-12">
                        <div>
                            <input class="form-control" type="text" placeholder="<%=homeUrl%>/register?ref=<%=user.username%>" value="<%=homeUrl%>/register?ref=<%=user.username%>" readonly>
                        </div>
                    </div>
                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary w-md">Copy</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-8 col-md-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Last 10 Referral History</h4>
                
                <%if(referralHistory.length){%>
                    

                    <div class="table-responsive">
                        <table id="mytable" class="table">
                            <thead>
                                <tr>
    
                                    <th> # </th>
                                    <th> User </th>
                                    <th> Date </th>
                                    <th> Status </th>
    
                                </tr>
                            </thead>
                            <tbody>
                                <%referralHistory.map((rh,index)=>{%>
    
                                    <tr>
                                        <td>
                                            <%=index + 1 %>
                                        </td>

                                        <td>
                                            <img src="<%=rh.avatar ? rh.avatar:'/img/avatar/avatar.jpg' %>" class="rounded-circle avatar-xs"
                                                alt="image">
                                            <%=rh.fullname%>
                                        </td>
                                        <td>
                                            <%=rh.created_at%>
                                        </td>
                                        <td>
                                            <%if(rh.r_status){%>
                                                <button type="button" class="btn btn-success btn-sm waves-effect waves-light">Verified</button>
                                                <%}else{%>
                                                    <button type="button" class="btn btn-danger btn-sm waves-effect waves-light">Unverified</button>
                                                    <%}%>
                                        </td>
    
                                    </tr>
    
                                    <%})%>
    
    
                            </tbody>
                        </table>
                        
                    </div>
                    <%}else{%>
                        <h6 class="text-center pt-3">No Referral Stats At The Moment</h6>
                        <%}%>
            </div>
        </div>
    </div>
</div>


<%if(user.notice){%>
<%-include("./partials/notice")%>
<button id="noticebtn" data-bs-toggle="modal" data-bs-target="#notice" hidden></button>
<%}%>


<script src="/user/js/user/dashboard/dashboard.js"></script>
<script src="/user/js/user/dashboard/mine-engine.js"></script>
<%-include("../../partials/footer")%>