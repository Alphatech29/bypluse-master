<%-include("../../partials/header")%>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="pt-3">
                    <div class="row justify-content-center">
                        <div class="col-xl-8">
                            <div>
                                <div class="text-center">
                                    <div class="mb-4">
                                        <a href="javascript: void(0);" class="badge bg-light font-size-12">
                                            <i class="bx bx-dollar align-middle text-muted me-1"></i> <%=post.post_earnable ? 'Earnable' : 'Not Earnable'%>
                                        </a>
                                    </div>
                                    <h4><%=post.post_title%></h4>
                                    <p class="text-muted mb-4"><i class="mdi mdi-calendar me-1"></i> <%=post.post_created_at%></p>
                                </div>

                                <hr>
                                <div class="text-center">
                                    <div class="row">
                                        <div class="col-sm-4">
                                            <div>
                                                <p class="text-muted mb-2">Views</p>
                                                <h5 class="font-size-15"><%=post.post_views%></h5>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="mt-4 mt-sm-0">
                                                <p class="text-muted mb-2">#ID</p>
                                                <h5 class="font-size-15"><%=post.post_id%></h5>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="mt-4 mt-sm-0">
                                                <p class="text-muted mb-2">Post by</p>
                                                <h5 class="font-size-15 text-capitalize"><%=post.username%></h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr>

                                <div class="my-5">
                                    <img src="<%=post.post_image ? post.post_image : '/general/img/thumbnail.png'%>" alt=""
                                        class="img-thumbnail mx-auto d-block">
                                </div>

                                <hr>

                                <div class="mt-4">
                                    <div class="text-muted font-size-14">


                                        <div class="mt-4">
                                            <%-post.post_description%>
                                        </div>

                                    </div>

                                    <hr>

                                    <div class="mt-5">
                                        <span>Share To Earn:- </span>
                                        <div class="btn-group me-2 mb-2 mb-sm-0">
                                            <button onclick="facebookShare('<%=post.post_id%>','<%=websiteDetails.website_facebook_code%>','<%=homeUrl + '/user/blog/' + post.post_slug%>','<%=homeUrl%>')" type="button" class="btn btn-facebook waves-light p-2 waves-effect"><i class="bx bxl-facebook"></i></button>

                                            <button onclick="whatsappShare('<%=post.post_id%>','<%=post.post_title%>','<%=homeUrl + '/user/blog/' + post.post_slug%>')" type="button" class="btn btn-whatsapp waves-light p-2 waves-effect"><i class="bx bxl-whatsapp"></i></button>

                                            <button onclick="twitterShare('<%=post.post_id%>','<%=post.post_title%>','<%=homeUrl + '/user/blog/' + post.post_slug%>')"  type="button" class="btn btn-twitter waves-light p-2 waves-effect"><i class="bx bxl-twitter"></i></button>

                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end card body -->
        </div>
        <!-- end card -->
    </div>
    <!-- end col -->
</div>

<script src="/user/js/user/blog/blog.js"></script>
<%-include("../../partials/footer")%>