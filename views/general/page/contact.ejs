<%-include("../partials/header")%>
<link rel="stylesheet" href="/user/js/lib/style.css">

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0 font-size-18"><%=title%></h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

    <center>
        <div class="checkout-tabs">
            <div class="row">

                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="space border-bottom-light">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-6 mx-auto">
                <div class="section-title reveal text-center mb-80 reveal">
                    <h3 class="mb-3">We'd love to hear from you</h3>
                    <p class="lead">Send us a message and we will get back to you within 24 hours </p>
                </div>
                <!-- end of section title -->
            </div>
        </div>

        <!-- end of col -->
        <div class="row">
            <div class="col-12 col-lg-8 mx-auto">
                <form id="contact" class="form form--sm">
                    <form>
                        <div class="mb-3">
                            <label for="name" class="form-label">Full name</label>
                            <input type="text" class="form-control" id="name" required>
                        </div>
                    
                        <div class="row">
                    
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="email" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="subject" class="form-label">Subject</label>
                                    <input type="text" class="form-control" id="subject" required>
                                </div>
                            </div>
                        </div>
                    
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3">
                                    <label for="message" class="form-label">Message</label>
                                    <textarea required class="form-control" id="message" cols="30" rows="10"></textarea>
                                </div>
                            </div>
                            
                        </div>
                    
                        <div>
                            <button id="submit" type="submit" class="btn btn-primary w-md btn-lg">Send Message</button>
                        </div>
                    </form>
                </form>
            </div>
        </div>
    </div>
</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end row -->
    </center>

    </div> <!-- container-fluid -->
</div>

<script src="/user/js/lib/cute-alert.js"></script>
<script src="/user/js/fetcher.js"></script>
<script src="/home/js/contact.js"></script>
<%-include("../partials/footer")%>